<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.attribe.nayashoppy.app">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            >
        <activity
                android:name=".screens.ScreenSplash"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:label="@string/title_activity_screen_splash"
                android:theme="@style/AppTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>
        <activity
                android:name=".screens.Main"
                android:label="@string/app_name">
        </activity>
        <activity android:name=".screens.ShopByCategory"
                  android:parentActivityName=".screens.Main">

        </activity>
    </application>

</manifest>