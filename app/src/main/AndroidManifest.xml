<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.attribe.nayashoppy.app">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        <activity
                android:name=".screens.ScreenSplash"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:label="@string/title_activity_screen_splash"
                android:theme="@style/AppTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".screens.Main">
        </activity>
               <activity
                android:name=".screens.ShopByCategory"
                android:parentActivityName=".screens.Main">
        </activity>
        <activity
                android:name=".screens.useraccount.ScreenWallet"
                android:parentActivityName=".screens.Main">
        </activity>
        <activity
                android:name=".screens.useraccount.ScreenRateApp"
                android:label="@string/title_activity_rate_app"
                android:parentActivityName=".screens.Main"
                android:theme="@style/AppTheme">
        </activity>
        <activity
                android:name=".screens.useraccount.ScreenLogin"
                android:parentActivityName=".screens.Main">
        </activity>
        <activity
                android:name=".screens.useraccount.ScreenMyOrder"
                android:parentActivityName=".screens.Main">
        </activity>
        <activity
                android:name=".screens.useraccount.ScreenWishList"
                android:parentActivityName=".screens.Main">
        </activity>
        <activity
                android:name=".screens.useraccount.ScreenAboutUs"
                android:parentActivityName=".screens.Main">
        </activity>
        <activity
                android:name=".screens.product_listings.ScreenProducts"
                android:parentActivityName=".screens.ShopByCategory">
        </activity>

        <activity android:name=".screens.product_listings.ScreenFilter">
        </activity>

        <activity android:name=".screens.product_listings.ScreenAllProduct">
        </activity>
        <activity android:name=".screens.product_detail.ScreenProductDetail">

        </activity>

        <activity android:name="com.facebook.FacebookActivity"
                  android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
                  android:theme="@android:style/Theme.Translucent.NoTitleBar"
                  android:label="@string/app_name" />

        <meta-data
                android:name="com.facebook.sdk.ApplicationId"
                android:value="@string/facebook_app_id"/>

        <activity
                android:name=".screens.useraccount.ScreenSignUp"
                android:label="@string/title_activity_screen_sign_up"
                android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>