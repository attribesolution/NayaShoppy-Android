<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screens.useraccount.ScreenWallet"
        tools:showIn="@layout/screen_wallet"
>

            <LinearLayout
                    android:id="@+id/frame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:orientation="vertical"
                    android:paddingBottom="20dp"
                    android:background="@color/white">

                <ImageView
                               android:id="@+id/wallet_image"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:src="@drawable/wallet"
                               android:layout_gravity="center_horizontal"
                               android:layout_marginTop="48dp"/>

                    <TextView
                              android:id="@+id/text_view_transaction"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="10dp"
                              android:layout_below="@+id/wallet_image"
                              android:layout_gravity="center_horizontal"
                              android:text="View transaction details, balance or add money"/>
            </LinearLayout>

    <Button
            android:id="@+id/button_transaction"
            android:layout_below="@+id/frame"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:text="View Details"
            style="@style/Button_maroon"
    />
</RelativeLayout>
