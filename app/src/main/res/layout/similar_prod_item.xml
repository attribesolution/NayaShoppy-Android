<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="155dp"
              android:layout_height="140dp">

    <RelativeLayout
                    android:id="@+id/similar_product_item_parent"
                    android:layout_width="155dp"
                    android:layout_height="140dp"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:background="@color/white">


        <ImageView
                android:id="@+id/similar_product_wish"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/wishlist"
                android:layout_marginTop="10dp"
                android:layout_alignParentStart="true" />

        <ImageView
                android:id="@+id/similar_product_share"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/share"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true" />
        <LinearLayout
                android:id="@+id/linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_centerHorizontal="true"
        >

            <ImageView
                    android:id="@+id/similar_product_image"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:src="@drawable/clean_shoe"
                    android:layout_gravity="center_horizontal"/>

            <TextView
                    android:id="@+id/similar_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T shirts for women"
                    android:gravity="center_horizontal" android:textSize="12sp" android:maxLines="1"/>

            <org.sufficientlysecure.htmltextview.HtmlTextView
                    android:id="@+id/similar_product_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="699 256 [72% OFF]"
                    android:gravity="center_horizontal" android:textSize="12sp"
                    android:layout_gravity="center_horizontal" android:paddingTop="5dp" android:paddingBottom="5dp"
                    android:maxLines="1"/>

            <org.sufficientlysecure.htmltextview.HtmlTextView
                    android:id="@+id/similar_prod_supplier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amazon"
                    android:background="@drawable/rounder_grey_filled"
                    android:layout_gravity="center_horizontal" android:paddingLeft="20dp" android:paddingRight="20dp"
                    android:textSize="10sp"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>