<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/popular_product_item_parent"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:background="@color/white">


    <ImageView
            android:id="@+id/popular_product_wish"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/wishlist"
            android:layout_marginTop="10dp"
            android:layout_alignParentStart="true" />

    <ImageView
            android:id="@+id/popular_product_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/share"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true" />
    <LinearLayout
            android:id="@+id/linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerHorizontal="true"
    >

        <ImageView
                android:id="@+id/popular_product_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"/>

        <TextView
                android:id="@+id/popular_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="T shirts for women"
        />

        <TextView
                android:id="@+id/popular_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="699 256 [72% OFF]"
        />
    </LinearLayout>
</RelativeLayout>