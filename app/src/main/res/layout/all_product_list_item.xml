<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView 
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="130dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp">

            <LinearLayout
                    android:id="@+id/main_content"
                    android:orientation="vertical"
                    android:layout_width="match_parent" 
                    android:layout_height="match_parent">

                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="110dp">

                    <FrameLayout
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp">
                        <ImageView
                                android:id="@+id/all_product_list_image"
                                android:layout_width="80dp"
                                android:layout_height="match_parent"
                        />

                    </FrameLayout>

                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@+id/linearLayout"
                            android:paddingLeft="10dp">

                    <TextView
                              android:id="@+id/all_product_list_item_prod_name"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:text="Micromax 2000mAH Power Bank"
                            />

                        <TextView
                                  android:id="@+id/all_product_list_item_prod_price"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:text="$450,30% OFF"
                        />

                     <LinearLayout
                             android:orientation="horizontal"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_marginTop="10dp">
                         
                         <TextView android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="4.5"

                                    />
                         
                         <LinearLayout

                                 android:orientation="vertical"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:layout_marginLeft="10dp">

                             <RatingBar android:layout_width="wrap_content"
                                        android:layout_height="10dp"
                                        android:numStars="5"
                                        android:progressDrawable="@drawable/rating_bar"
                                        />
                             
                             <TextView android:layout_width="wrap_content"
                                       android:layout_height="10dp"
                                       android:text="(145 user)"
                                       android:textSize="8sp"
                             />
                         </LinearLayout>
                         
                     </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:id="@+id/linearLayout">

                        <ImageView
                                android:id="@+id/icon_wish"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/wishlist"
                        />

                        <ImageView
                                   android:id="@+id/icon_share"
                                   android:layout_width="40dp"
                                   android:layout_height="wrap_content"
                                   android:src="@drawable/share"
                                    />


                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="20dp">

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textSize="12sp"
                              android:text="Specification: "
                              android:textColor="@color/text_blue"
                              android:layout_marginLeft="15dp"/>

                    <TextView android:layout_width="60dp"
                              android:layout_height="wrap_content"
                              android:textSize="12sp"
                              android:text="Capacity: "
                              android:layout_marginLeft="15dp"/>

                    <TextView android:layout_width="60dp"
                              android:layout_height="wrap_content"
                              android:textSize="12sp"
                              android:text="2000mAH"
                              android:layout_marginLeft="15dp"/>

                    <TextView android:layout_width="60dp"
                              android:layout_height="wrap_content"
                              android:textSize="12sp"
                              android:text="Color: "
                              android:layout_marginLeft="15dp"/>

                    <TextView android:layout_width="60dp"
                              android:layout_height="wrap_content"
                              android:textSize="12sp"
                              android:text="Black"
                              android:layout_marginLeft="15dp"/>
                </LinearLayout>
                
            </LinearLayout>

        </RelativeLayout>



</android.support.v7.widget.CardView>