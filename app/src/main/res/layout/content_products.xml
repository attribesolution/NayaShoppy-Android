<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:tools="http://schemas.android.com/tools"
                tools:showIn="@layout/screen_products"
                android:layout_marginTop="180dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >

    <LinearLayout
            android:id="@+id/brands_parent"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/white"
            android:orientation="horizontal"
            >

    </LinearLayout>

    <TextView
              android:id="@+id/label_new_arrival"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/brands_parent"
              android:layout_marginTop="20dp"
              android:text="NEW ARRIVAL"
                />

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_all_products"
            android:layout_below="@+id/label_new_arrival"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <TextView

            android:id="@+id/label_popular_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recycler_all_products"
            android:layout_marginTop="20dp"
            android:text="Our popular Product"
    />

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_popular_products"
            android:layout_below="@+id/label_popular_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >


    </android.support.v7.widget.RecyclerView>
</RelativeLayout>