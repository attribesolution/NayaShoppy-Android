<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="TabLayout_Home" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/primary</item>
        <item name="tabTextAppearance">@style/MyCustomTabText</item>
        <item name="tabSelectedTextColor">@color/primary</item>


    </style>

    <style name="MyCustomTabText" parent="TextAppearance.Design.Tab">

        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="Button_maroon" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#CD3132</item>
    </style>
</resources>